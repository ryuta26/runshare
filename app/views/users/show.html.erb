<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">
          <%= @user.name %>
        </h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="
        <%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
    </div>
  </aside>
  
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link">記録</a></li>
    </ul>
    <div class="col-sm-8 offset-sm-2">
      <%= render 'records/records', records: @records %>
    </div>
  </div>
</div>

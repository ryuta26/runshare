<ul class="list-unstyled">
  <% records.each do |record| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(record.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to record.user.name, user_path(record.user) %>
          <%= record.user.id %>
          <span class="text-muted">posted at 
           <%= record.created_at %>
          </span>
        </div>
        <div>
          <p>
            <%= record.date %> 
          </p>
          <p>
            <%= record.content %>km
          </p>
          <div class= mb-2>
            <% if record.img? %>
              <%= image_tag record.img.url, :size =>'300x170' %>
            <% end %>
          </div>
            <% if current_user == record.user %>
          
          <%= link_to "削除", record, method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'btn btn-danger btn-sm' %>
          <%= link_to"編集", edit_record_path(record), class: 'btn btn-primary btn-sm' %>
            <% end %>
        </div>
    
          
      </div>
    </li>
  
<% end %>

  
<%= paginate records %>

</ul>
<% if logged_in? %>
  <div class="col-sm-8 offset-sm-2">
    <div class="text-center">
    <h2>記録を編集</h2>
    </div>
      <%= form_with(model: @record, local: true) do |f| %>
      <div class="form-group">
        <label>走った日付</label>
        <%= f.date_field :date, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>走った距離（km）</label>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>写真</label>
          <%= f.file_field :img, id: :record_img %>
          <p><%= f.check_box :remove_img %>画像を削除する</p>
      </div>
        <%= f.submit '更新', class: 'btn btn-primary btn-block' %>
<% end %>
<% end %>